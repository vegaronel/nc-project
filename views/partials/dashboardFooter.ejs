

              <!-- Bootstrap JS and Popper.js (required for dropdown and modal) -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Get the current URL path
            const currentPath = window.location.pathname;

            // Check if the URL matches "/dashboard/message"
            if (currentPath === '/dashboard/message') {
                // Change the background color of the buttons
                $('#playButton').removeClass("play-btn"); 
                $('#playButton').addClass("red-button"); 

                $('#chatboxButton').removeClass("red-button"); 
                $('#chatboxButton').addClass("play-button"); 
                $('#chatboxButton').css("color", "#FFFFFF80") ;
                
            }
        });

    </script>
